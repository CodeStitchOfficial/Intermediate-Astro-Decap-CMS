---
/**
 * * A simple banner used on every page except the homepage
 * * Takes a title and an image as props
 */

// Utils
import { Picture } from "astro:assets";
import type { GetImageResult } from "astro";

interface Props {
	title: string; // heading text
	image: GetImageResult; // pre-optimized image from getImage()
}

const { title, image } = Astro.props;
---

<section id="int-hero">
	<h1 id="home-h">{title}</h1>

	<Picture src={image.src} width={image.attributes.width} height={image.attributes.height} formats={["avif", "webp"]} alt="" priority />
</section>

<style lang="scss">
	@use "sass:math";
/*-- -------------------------- -->
<---   Interior Page Header     -->
<--- -------------------------- -*/

	/* Mobile */
	@media only screen and (min-width: 0em) {
		#int-hero {
			min-height: 30vh;
			padding-top: (math.div(50, 16) * 1rem);
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			position: relative;
			z-index: 1;

			&:before {
				content: "";
				width: 100%;
				height: 100%;
				background: #000;
				opacity: 0.7;
				display: block;
				position: absolute;
				top: 0;
				left: 0;
				z-index: -1;
			}

			picture {
				width: 100%;
				height: 100%;
				position: absolute;
				top: 0;
				left: 0;
				z-index: -2;

				img {
					width: 100%;
					height: 100%;
					object-fit: cover;
					position: absolute;
					top: 0;
					left: 0;
				}
			}

			h1 {
				font-size: var(--headerFontSize);
				text-align: center;
				width: 96%;
				max-width: (math.div(500, 16) * 1rem);
				margin: 0 auto;
				margin-top: (math.div(70, 16) * 1rem);
				margin-bottom: (math.div(30, 16) * 1rem);
				color: #fff;
				position: relative;
			}

			p {
				text-align: center;
				width: 96%;
				max-width: (math.div(400, 16) * 1rem);
				margin: auto;
				margin-bottom: (math.div(30, 16) * 1rem);
				color: #fff;
				display: block;
			}
		}
	}

	/* Small Desktop */
	@media only screen and (min-width: 64em) {
		#int-hero {
			height: auto;
			min-height: (math.div(300, 16) * 1rem);
			padding-top: (math.div(180, 16) * 1rem);
			background-attachment: fixed;
			padding-block-end: (math.div(100, 16) * 1rem);
		}
	}</style>
