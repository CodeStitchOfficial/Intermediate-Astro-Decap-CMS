        display: grid;
        place-items: center;
        padding: (24/16rem);
      }

      .cs-lightbox[hidden] {
        display: none;
      }

      .cs-lightbox__backdrop {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.84);
      }

      .cs-lightbox__dialog {
        position: relative;
        width: min(1100px, 92vw);
        max-height: calc(100dvh - 3rem);
        display: grid;
        place-items: center;
        outline: none;
        z-index: 1;
      }

      .cs-lightbox__figure {
        margin: 0;
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-rows: 1fr;
        gap: 0;
      }

      .cs-lightbox__img {
        width: 100%;
        max-height: calc(100dvh - 6rem);
        object-fit: contain;
        border-radius: (10/16rem);
        background: rgba(255, 255, 255, 0.04);
        display: block;
        margin: 0 auto;
      }

      /* caption styles removed */

      .cs-lightbox__close {
        position: absolute;
        top: (10/16rem);
        right: (10/16rem);
        width: (44/16rem);
        height: (44/16rem);
        border: 1px solid rgba(255, 255, 255, 0.25);
        background: rgba(0, 0, 0, 0.35);
        color: #fff;
        font-size: (22/16rem);
        cursor: pointer;
      }

      .cs-lightbox__nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: (44/16rem);
        height: (44/16rem);
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.25);
        background: rgba(0, 0, 0, 0.35);
        color: #fff;
        font-size: (28/16rem);
        line-height: 1;
        cursor: pointer;
      }

      .cs-lightbox__prev {
        left: (10/16rem);
      }

      .cs-lightbox__next {
        right: (10/16rem);
      }
    }

    /* Scroll lock when lightbox is open */
    html.cs-lightbox-open,
    body.cs-lightbox-open {
      overflow: hidden;
    }
  }

  /* Dark mode */
  @media only screen and (min-width: 0em) {
    body.dark-mode {
      #gallery {
        .cs-title {
