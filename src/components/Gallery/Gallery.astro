  <script is:inline>
    // Gallery Lightbox (no deps)
    // Scoped to this #gallery instance.
    const initGalleryLightbox = () => {
      const root = document.querySelector("#gallery");
      if (!root) return;

      const triggers = Array.from(root.querySelectorAll("[data-lightbox-trigger]"));
      const lightbox = root.querySelector("[data-lightbox]");
      const dialog = root.querySelector("[data-lightbox-dialog]");
      const img = root.querySelector("[data-lightbox-img]");
      // caption removed
      const closeEls = Array.from(root.querySelectorAll("[data-lightbox-close]"));
      const prevBtn = root.querySelector("[data-lightbox-prev]");
      const nextBtn = root.querySelector("[data-lightbox-next]");

      if (!triggers.length || !lightbox || !dialog || !img || !prevBtn || !nextBtn) return;

      let activeIndex = -1;
      let lastFocused = null;

      const getTriggerImg = (trigger) => trigger.querySelector("img");

      const lockScroll = (locked) => {
        document.documentElement.classList.toggle("cs-lightbox-open", locked);
        document.body.classList.toggle("cs-lightbox-open", locked);
      };

      const setActive = (index) => {
        if (index < 0) index = triggers.length - 1;
        if (index >= triggers.length) index = 0;
        activeIndex = index;

        const trigger = triggers[activeIndex];
        const triggerImg = getTriggerImg(trigger);
        const alt = (trigger?.getAttribute("data-alt") || triggerImg?.getAttribute("alt") || "").trim();

        const src = triggerImg?.currentSrc || triggerImg?.src;
        if (src) img.src = src;
        img.alt = alt;
      };

      const getFocusable = () => {
        const selector =
          'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])';
        return Array.from(dialog.querySelectorAll(selector));
      };

      const trapFocus = (e) => {
        if (e.key !== "Tab") return;
        const focusable = getFocusable().filter(
          (el) => !el.hasAttribute("disabled") && !el.getAttribute("aria-hidden")
        );
        if (!focusable.length) return;

        const first = focusable[0];
        const last = focusable[focusable.length - 1];
        const active = document.activeElement;

        if (e.shiftKey && active === first) {
          e.preventDefault();
          last.focus();
        } else if (!e.shiftKey && active === last) {
          e.preventDefault();
          first.focus();
        }
      };

      const onKeydown = (e) => {
        if (lightbox.hidden) return;

        if (e.key === "Escape") {
          e.preventDefault();
          close();
          return;
        }

        if (e.key === "ArrowLeft") {
          e.preventDefault();
          setActive(activeIndex - 1);
          return;
        }

        if (e.key === "ArrowRight") {
          e.preventDefault();
          setActive(activeIndex + 1);
          return;
        }

        trapFocus(e);
      };

      const open = (index, triggerEl) => {
        lastFocused = triggerEl || document.activeElement;
        lightbox.hidden = false;
        lockScroll(true);
        setActive(index);

        queueMicrotask(() => dialog.focus());
        document.addEventListener("keydown", onKeydown);
      };

      const close = () => {
        lightbox.hidden = true;
        lockScroll(false);
        img.removeAttribute("src");
        document.removeEventListener("keydown", onKeydown);

        if (lastFocused && typeof lastFocused.focus === "function") {
          queueMicrotask(() => lastFocused.focus());
        }
        lastFocused = null;
        activeIndex = -1;
      };

      triggers.forEach((trigger, index) => {
        trigger.addEventListener("click", () => open(index, trigger));
      });

      closeEls.forEach((el) => {
        el.addEventListener("click", () => close());
      });

      dialog.addEventListener("click", (e) => e.stopPropagation());

      prevBtn.addEventListener("click", () => setActive(activeIndex - 1));
      nextBtn.addEventListener("click", () => setActive(activeIndex + 1));

      root.dataset.lightboxInit = "true";
    };

    document.addEventListener("astro:page-load", () => {
      const root = document.querySelector("#gallery");
      if (root?.dataset?.lightboxInit === "true") return;
      initGalleryLightbox();
    });
  </script>
