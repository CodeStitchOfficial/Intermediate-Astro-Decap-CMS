<style lang="scss">
	/* PAGE-SPECIFIC STYLES FOR THE REVIEWS PAGE */

	/*-- -------------------------- -->
<---           Reviews          -->
<--- -------------------------- -*/

	/* Mobile */
	@media only screen and (min-width: 0em) {
		#reviews {
			margin: auto;
			padding-top: calc(120 / 16 * 1rem);
			padding-bottom: calc(50 / 16 * 1rem);

			.container {
				width: 96%;
				max-width: calc(1320 / 16 * 1rem);
			}

			.review {
				width: 100%;
				max-width: calc(410 / 16 * 1rem);
				margin: auto;
				margin-bottom: calc(100 / 16 * 1rem);
				padding: calc(64 / 16 * 1rem) calc(30 / 16 * 1rem) calc(18 / 16 * 1rem) calc(30 / 16 * 1rem);
				background: #fff;
				box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.05);
				border-radius: calc(5 / 16 * 1rem);
				display: flex;
				flex-direction: column;
				position: relative;
				&:last-of-type {
					margin-bottom: 0;
				}

				.profile {
					width: calc(99 / 16 * 1rem);
					height: calc(99 / 16 * 1rem);
					margin-bottom: calc(16 / 16 * 1rem);
					margin-left: 0;
					border-radius: 50%;
					display: block;
					position: absolute;
					top: calc(-51 / 16 * 1rem);
					left: calc(30 / 16 * 1rem);
				}

				p {
					line-height: 1.5em;
					text-align: left;
					margin-bottom: calc(28 / 16 * 1rem);
				}

				.star-group {
					margin-top: auto;
					padding-top: calc(16 / 16 * 1rem);
					border-top: 1px solid #e7e7e7;
					display: flex;
					justify-content: space-between;
					align-items: center;
					flex-wrap: nowrap;

					.name {
						font-weight: bold;
						line-height: calc(24 / 16 * 1rem);
						text-align: left;
						color: #1a1a1a;
						display: block;
					}

					.desc {
						font-weight: 400;
						color: #575757;
						display: block;
					}

					img {
						width: calc(91 / 16 * 1rem);
						height: calc(15 / 16 * 1rem);
						margin: 0;
						display: block;
					}
				}
			}
		}
	}

	/* Tablet */
	@media only screen and (min-width: 48em) {
		#reviews {
			padding-top: calc(150 / 16 * 1rem);
			padding-bottom: calc(50 / 16 * 1rem);

			.container {
				font-size: min(1.4vw, 1em);
				padding: 0;
				display: flex;
				justify-content: center;
				flex-wrap: wrap;
				column-gap: calc(30 / 16 * 1rem);
			}

			.review {
				margin: 0;
				margin-bottom: calc(150 / 16 * 1rem);

				&:last-of-type {
					margin-bottom: calc(150 / 16 * 1rem);
				}
			}
		}
	}

	/* Dark Mode */
	@media only screen and (min-width: 0em) {
		body.dark-mode {
			#reviews {
				.review {
					background: var(--medium);

					.star-group {
						.name {
							color: #fff;
						}

						.desc {
							color: #fff;
							opacity: 0.7;
						}
					}
				}
			}
		}
	}
</style>
