---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { formatDate } from "@js/utils";
import "@styles/blog.less";

const posts = await getCollection("blog");
const featuredPosts = posts.filter((post) =>
  post.data.tags.includes("featured")
);
---

<!-- ============================================ --><!--                Featured Posts                --><!-- ============================================ -->
  <!--Featured-->
    <span class="blog-sidebar_widget-header">Featured Posts</span>
    {
      featuredPosts.map((post) => (
        <a class="blog-sidebar_widget-link" href={`/blog/${post.id}`}>
          <picture class="blog-sidebar_widget-image">
            <Image
              src={post.data.image}
              alt={post.data.imageAlt}
              width="60"
              height="60"
              decoding="async"
            />
          </picture>
          <div class="content-group">
            <h3 class="blog-sidebar_widget-h3">{post.data.title}</h3>
            <span class="blog-sidebar_widget-date">{formatDate(post.data.date)}</span>
          </div>
        </a>
      ))
    }
